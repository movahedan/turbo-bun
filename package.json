{
	"root": true,
	"name": "turbo-bun",
	"version": "0.0.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"packageManager": "bun@1.2.19",
	"scripts": {
		"//local": "/////////////////////////////////////////////////////////////////////////////////////////////////////",
		"local:setup": "bun run scripts/local-setup.ts",
		"local:vscode": "bun run scripts/local-vscode.ts",
		"local:cleanup": "bun run scripts/local-cleanup.ts",
		"//biome and checks": "//////////////////////////////////////////////////////////////////////////////////////////",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"check:types": "turbo run check:types",
		"check:types:force": "turbo run check:types --force",
		"check:quick": "bun run check:fix && turbo run check:types --affected && bun run test --affected && bun run build --affected",
		"//turbo": "/////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev": "turbo run dev",
		"build": "turbo run build",
		"build:storybook": "turbo run build:storybook",
		"start": "turbo run start",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"test:coverage": "turbo run test:coverage",
		"test:affected": "turbo run test --affected",
		"test:affected:watch": "turbo run test:watch --affected",
		"test:parallel": "turbo run test --parallel",
		"//devcontainers": "/////////////////////////////////////////////////////////////////////////////////////////////",
		"dev:setup": "bun run scripts/dev-setup.ts",
		"dev:compose": "docker compose -f .devcontainer/docker-compose.dev.yml",
		"dev:check": "bun run scripts/dev-check.ts",
		"dev:health": "bun run dev:compose ps --format table",
		"dev:build": "bun run dev:compose build --parallel",
		"dev:down": "bun run dev:compose --profile all down --remove-orphans",
		"dev:up": "bun run dev:compose --profile all up -d",
		"dev:logs": "bun run dev:compose logs -f",
		"dev:cleanup": "bun run scripts/dev-cleanup.ts",
		"dev:rm": "bun run scripts/dev-rm.ts",
		"//ci": "////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"ci:check": "bun run scripts/ci-check.ts",
		"ci:branchname": "bun run scripts/ci-branchname",
		"//prodcontainers": "////////////////////////////////////////////////////////////////////////////////////////////",
		"prod:compose": "COMPOSE_PROJECT_NAME=repo-prod docker compose -f docker-compose.yml",
		"prod:up": "bun run prod:compose up -d",
		"prod:down": "bun run prod:compose down",
		"prod:build": "bun run prod:compose build",
		"prod:health": "bun run prod:compose ps --format table",
		"//changesets": "////////////////////////////////////////////////////////////////////////////////////////////////",
		"changesets": "bunx --install=force --bun @changesets/cli"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@changesets/cli": "2.29.5",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"bun-types": "1.2.19",
		"chalk": "5.4.1",
		"lefthook": "1.12.2",
		"turbo": "2.5.5",
		"typescript": "5.8.3",
		"yaml": "2.8.0"
	},
	"overrides": {
		"@types/react": "19.1.9",
		"@types/react-dom": "19.1.7",
		"typescript": "5.8.3",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"vite": "7.0.6",
		"chalk": "5.4.1"
	},
	"description": "A monorepo for Turbo and Bun",
	"author": "Soheil Movahedan",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/movahedan/turbo-bun"
	},
	"homepage": "https://github.com/movahedan/turbo-bun",
	"bugs": "https://github.com/movahedan/turbo-bun/issues",
	"keywords": [
		"turbo",
		"bun",
		"monorepo",
		"typescript",
		"react",
		"docker",
		"devcontainers",
		"git",
		"vite"
	]
}
